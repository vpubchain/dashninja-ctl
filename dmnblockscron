# Disable logging by default
blockdegapperlog=/dev/null
blockparserlog=/dev/null
blocksjsonlog=/dev/null

# If parameter 1 is log then enable logging
if [[ "$1" == "log" ]]; then
  blockdegapperlog=/var/log/dmn/blockdegapper.log
  blocksjsonlog=/var/log/dmn/blocksjson.log
  blockparserlog=/var/log/dmn/dmnblockparser.log
fi

# Sequentially run scripts
/usr/bin/nice -n 14 /opt/dmnctl/dmnblockdegapper main >> $blockdegapperlog
/usr/bin/nice -n 14 /opt/dmnctl/dmnblockparser >> $blockparserlog
/usr/bin/nice -n 14 /usr/bin/php /home/lixu/git/dashninja/dashninja-fe/api/cron.php main blocks24h >> $blocksjsonlog
/usr/bin/nice -n 14 /usr/bin/php /home/lixu/git/dashininja/dashninja-fe/api/cron.php main blockssuperblocks >> $blocksjsonlog
